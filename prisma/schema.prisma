generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String
  image    String?
  author   User      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
  likes    Int       @default(0)
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name    String?
  profilePic String? @default("https://cdn.fakercloud.com/avatars/none_128.jpg")
  blogs   Blog[]
}
